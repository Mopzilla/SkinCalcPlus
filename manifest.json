{
    "manifest_version": 3,
    "name": "SkinCalcPlus",
    "version": "1.0.0",
    "content_scripts": [
        {
            "matches": ["https://skin.club/*"],
            "run_at": "document_start",
            "all_frames": true,
            "css": [
                "scplus2_global.css",
                "scplus2_case_page.css",
                "scplus2_giveaway_page.css",
                "scplus2_header.css",
                "scplus2_battle.css",
                "scplus2_profile.css"
            ],
            "js": [
                "jquery-3.7.1.min.js",
                "scplus2_main.js",
                "scplus2_case_page.js",
                "scplus2_giveaway_page.js",
                "scplus2_header.js",
                "scplus2_battle.js",
                "scplus2_profile.js"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "SkinCalcPlus@Mopzilla"
        }
    }
}
